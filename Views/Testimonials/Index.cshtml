@model IEnumerable<Market_Store.Models.Testimonial>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdminDashboard.cshtml";
}

<h1>Index</h1>

<p>
    <a class="btn btn-primary" asp-controller="Userts" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TestimonialComment)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Modifieddate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TestimonialComment)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Modifieddate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.Fullname)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.TestimonialId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.TestimonialId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.TestimonialId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
