@model IEnumerable<Market_Store.Models.Productt>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdminDashboard.cshtml";
}

<div class="container">

    <h1 class="responsive">Product information</h1>

    <p>
        <a class="btn btn-primary" asp-controller="Productts" asp-action="Create">Create New</a>
    </p>
    <div class="table-responsive">
        <table id="table" class="table table align-items-center table-flush table-hover">
            <thead>
                <tr>
                    <th>
                        Image
                    </th>
                    <th>
                        Product Name
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Description)
                    </th>
                    <th>
                        Date Created
                    </th>
                    <th>
                        Quantity
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Sale)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Price)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.In_Stock)
                    </th>
                    <th>
                        Store
                    </th>
                    <th>
                        Category
                    </th>
                    <th>Edit</th>
                    <th>Show More</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>
                        <img src="/Image/@Html.DisplayFor(modelItem => item.Imagepath)" width="100" height="100" class="img-fluid" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Productname)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Datecreated)
                    </td>
                    <td>
                        @Convert.ToInt32(item.Quantity)
                    </td>
                    <td>
                        @(Convert.ToInt32(item.Sale))
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)$
                    </td>

                    @{
                        var c = item.In_Stock;
                        if (c == 'Y')
                        {
                            <td>YES</td>

                        }
                        else
                        {
                            <td>NO</td>
                        }
                    }


                    <td>
                        @Html.DisplayFor(modelItem => item.Store.Storename)
                    </td>
                    <td>
                        @item.Store.Cat.Categoryname
                    </td>



                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Prodid"><span class="material-icons">edit</span></a>
                    </td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Prodid"><span class="material-icons">info</span></a>

                    </td>
                    <td>
                        <a asp-action="Delete" asp-route-id="@item.Prodid"><span class="material-icons">delete</span></a>
                    </td>



                </tr>
                }
            </tbody>
        </table>


    </div>
</div>
