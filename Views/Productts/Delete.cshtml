@model Market_Store.Models.Productt

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_LayoutAdminDashboard.cshtml";
}
<div class="container">


	<h1>Delete</h1>

	@*<h3>Are you sure you want to delete this?</h3>*@
	<div>
		<h4>Productt</h4>
		<hr />
		<dl class="row">
			<dt class="col-sm-2">
				Image
			</dt>
			<dd class="col-sm-10">
				<img src="/Image/@Html.DisplayFor(modelItem => modelItem.Imagepath)" width="100" height="100" />
			</dd>
			<dt class="col-sm-2">
				Product Name
			</dt>
			<dd class="col-sm-10">
				@Html.DisplayFor(model => model.Productname)
			</dd>
			<dt class="col-sm-2">
				@Html.DisplayNameFor(model => model.Description)
			</dt>
			<dd class="col-sm-10">
				@Html.DisplayFor(model => model.Description)
			</dd>
			<dt class="col-sm-2">
				Date Created
			</dt>
			<dd class="col-sm-10">
				@Html.DisplayFor(model => model.Datecreated)
			</dd>
			<dt class="col-sm-2">
				@Html.DisplayNameFor(model => model.Quantity)

			</dt>
			<dd class="col-sm-10">
				@Convert.ToInt32(Model.Quantity)
			</dd>
			<dt class="col-sm-2">
				@Html.DisplayNameFor(model => model.Sale)
			</dt>
			<dd class="col-sm-10">
				@Html.DisplayFor(model => model.Sale)$
			</dd>
			<dt class="col-sm-2">
				@Html.DisplayNameFor(model => model.Price)
			</dt>
			<dd class="col-sm-10">
				@Html.DisplayFor(model => model.Price)$
			</dd>
			<dt class="col-sm-2">
				@Html.DisplayNameFor(model => model.In_Stock)
			</dt>
			<dd class="col-sm-10">
				@Html.DisplayFor(model => model.In_Stock)
			</dd>
			<dt class="col-sm-2">
				Store
			</dt>
			<dd class="col-sm-10">
				@Html.DisplayFor(model => model.Store.Storename)
			</dd>

			<dt class="col-sm-2">
				Category
			</dt>
			<dd class="col-sm-10">
				@Html.DisplayFor(model => model.Store.Cat.Categoryname)
			</dd>
		</dl>

		<form asp-action="Delete">
			<input type="hidden" asp-for="Prodid" />
			<input type="submit" value="Delete" class="btn btn-danger" /> |
			<a asp-action="Index">Back to List</a>
		</form>
	</div>

</div>