                                        <a asp-action="Edit" asp-controller="Userts" asp-route-id="@item.Userid"><span class="material-icons">edit</span></a>
                                        <a asp-action="Details" asp-controller="Userts" asp-route-id="@item.Userid"><span class="material-icons">info</span></a>
